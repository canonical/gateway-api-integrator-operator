# Example terraform.tfvars file for gateway-api-integrator-operator product

# Required variables
model_uuid = "your-juju-model-uuid-here"

# Gateway API Integrator configuration
gateway_api_integrator_app_name = "gateway-api-integrator"
gateway_api_integrator_channel  = "latest/edge"
gateway_api_integrator_config = {
  "external-hostname"     = "gateway.example.com"
  "gateway-class-name"    = "cilium"
  "gateway-name"          = "cilium-gateway"
  "gateway-namespace"     = "cilium-gateway"
  "gateway-port"          = "80"
  "gateway-scheme"        = "HTTP"
}
gateway_api_integrator_units = 1

# Gateway Route Configurator configuration  
gateway_route_configurator_app_name = "gateway-route-configurator"
gateway_route_configurator_channel  = "latest/edge"
gateway_route_configurator_config   = {}
gateway_route_configurator_units    = 1

# Optional integrations
# tls_certificates_app_name = "self-signed-certificates"
# ingress_app_name = "traefik-k8s"